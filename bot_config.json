{
  "bot": {
    "prefix": ".pc ",
    "name": "PiCord",
    "version": "1.0.0",
    "silent": false
  },
  "discord": {
    "token_file": ".env",
    "status": {
      "type": "idle",
      "afk": true
    }
  },
  "logging": {
    "level": "INFO",
    "file": "bot.log",
    "console": true
  },
  "features": {
    "autoboat": {
      "enabled": true,
      "config_file": "features/autoboat/config.json"
    },
    "ssh": {
      "enabled": true,
      "config_file": "features/ssh/config.json"
    },
    "settings": {
      "enabled": true,
      "config_file": "features/settings/config.json"
    }
  }
}
