{
  "bot": {
    "prefix": ".pc ",
    "name": "PiCord",
    "version": "2.0.0",
    "silent": false
  },
  "discord": {
    "token_file": ".env",
    "status": {
      "type": "online",
      "afk": true
    }
  },
  "logging": {
    "level": "INFO",
    "file": "bot.log",
    "console": true
  },
  "apps": {
    "autoboat": {
      "enabled": true,
      "config_file": "apps/autoboat/config.json"
    },
    "ssh": {
      "enabled": true,
      "config_file": "apps/ssh/config.json"
    },
    "settings": {
      "enabled": true,
      "config_file": "apps/settings/config.json"
    },
    "updater": {
      "enabled": true,
      "config_file": "apps/updater/config.json"
    }
  }
}
